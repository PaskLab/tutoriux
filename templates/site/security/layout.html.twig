{% trans_default_domain "site" %}
{% extends 'site/layout.html.twig' %}

{% block title %}
	Tutoriux | {% trans %}Login{% endtrans %}
{% endblock %}

{% block meta_robots %}
	<meta name="robots" content="noindex, nofollow">
{% endblock %}

{% block stylesheets %}
	{% embed 'site/core/stylesheets.html.twig' %}
		{% block page_stylesheets %}
			{{ encore_entry_link_tags('site_login') }}
		{% endblock %}
	{% endembed %}
{% endblock %}

{% block body_attr %} class="login"{% endblock %}

{% block body %}

	{% block flash_message %}
		{% include 'global/flash_message.html.twig' %}
	{% endblock %}

	<!-- BEGIN LOGO -->
	<div class="logo">
		<a href="{{ path('section_id_1') }}">
			<img src="{{ asset('logo_slogan_' ~ app.request.locale ~ '.png', 'global_logo') }}" width="280" alt="{{ project_title }}" />
		</a>
	</div>
	<!-- END LOGO -->

	{% block content_main '' %}

	<div class="copyright">
		{% include 'global/copyright.html.twig' %}
	</div>

{% endblock %}

{% block javascripts %}
	{# BEGIN GLOBAL VARS #}
	<script>
		var session_locale = '{{ app.request.locale }}';
	</script>
	{# END GLOBAL VARS #}
	{{ encore_entry_script_tags('site_login') }}
{% endblock %}

{% block modals %}{% endblock %}