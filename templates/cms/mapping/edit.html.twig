{% trans_default_domain "cms" %}
{% extends 'cms/layout.html.twig' %}
{% form_theme form 'cms/core/form/form_fields_vertical.html.twig' %}

{% block content_title %}
	<h3 class="page-title">{% include 'globals/entity_title.html.twig' with { 'entity': entity } %}</h3>
{% endblock %}

{% block content_main %}

	<div class="row">
		<div class="col-md-8 col-md-offset-2">

			{{ form_start(form) }}

			{{ form_errors(form) }}

			<div class="portlet box grey-silver">
				<div class="portlet-title">
					<div class="caption">
						<i class="fa fa-sitemap"></i>
						{% trans %}Mapping{% endtrans %}
					</div>
				</div>
				<div class="portlet-body form">
					<div class="form-body">

						{{ form_rest(form) }}

					</div>
					{% block edit_actions %}
						{% include 'cms/core/edit_actions.html.twig' with {
						'entity': entity,
						'delete_route': path('cms_mapping_delete', { id: (entity.id) ?: 0 }),
						'delete_check_route': path('cms_mapping_delete_check', { 'id': (entity.id) ?: 0 }),
						'cancel_route': path('cms_mapping')
						} %}
					{% endblock %}
				</div>
			</div>

			{{ form_end(form) }}

		</div>
	</div>

{% endblock %}