{% extends 'globals/form/_form_fields_vertical.html.twig' %}

{# form_row #}

{% block form_row %}
	{% filter spaceless %}
		<div class="form-group{% if errors|length > 0 %} has-error{% endif %}">

			{% if not (isChoice is defined and isChoice) %}
				{{ form_label(form, null, {'label_attr': {'class': 'control-label'}} ) }}
			{% endif %}

			{% if errors|length > 0 %}

				<div class="input-icon right">
					<i class="fa fa-exclamation tooltips" data-original-title="{{ errors[0].message }}" data-container="body"></i>
					{{ form_widget(form, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder': label|trans} }) }}
				</div>

				{% for error in errors %}
					<span id="{{ form.vars.id }}-error" class="help-block">{{ error.message|trans }}</span>
				{% endfor %}
			{% else %}
				{{ form_widget(form, {'attr': {'class': 'form-control placeholder-no-fix', 'placeholder': label|trans} }) }}
			{% endif %}

			{% if isChoice is defined and isChoice %}
				{{ form_label(form, null, {'label_attr': {'class': 'control-label'}} ) }}
				{% if attr.alt is defined %}
					<span class="help-block">{{ attr.alt|trans|raw }}</span>
				{% endif %}
			{% endif %}

		</div>
	{% endfilter %}
{% endblock form_row %}